{
  "name": "household-ledger",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack -p 3001",
    "build": "prisma generate && next build --turbopack",
    "start": "next start",
    "postinstall": "prisma generate",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "security:check": "./scripts/security-check.sh",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:update": "pnpm update && pnpm audit fix",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:watch": "jest --coverage --watch",
    "test:coverage:ci": "jest --coverage --ci --watchAll=false --passWithNoTests",
    "test:coverage:threshold": "jest --coverage --passWithNoTests",
    "test:api": "jest tests/api",
    "test:lib": "jest tests/lib",
    "test:components": "jest tests/components",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:comprehensive": "playwright test tests/e2e/comprehensive-qa.test.ts",
    "test:e2e:mobile": "playwright test tests/e2e/comprehensive-qa.test.ts --project='Mobile Chrome'",
    "test:e2e:headed": "playwright test tests/e2e/comprehensive-qa.test.ts --headed",
    "test:qa:full": "pnpm run test:coverage && pnpm run test:e2e:comprehensive",
    "test:e2e:debug": "playwright test --debug",
    "test:responsive": "playwright test tests/responsive-ui.test.ts",
    "analyze": "ANALYZE=true next build",
    "lighthouse": "lighthouse http://localhost:3001 --preset=desktop --chrome-flags=\"--no-sandbox --disable-dev-shm-usage\" --output=json --output-path=./lighthouse-report.json",
    "lighthouse:ci": "lhci autorun --config=./lighthouserc.json",
    "prepare": "husky",
    "mcp:prisma": "prisma mcp"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "^6.14.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/react-query": "^5.85.5",
    "@tanstack/react-table": "^8.21.3",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "js-levenshtein": "^1.1.6",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.540.0",
    "mysql2": "^3.14.3",
    "next": "15.5.2",
    "prisma": "^6.14.0",
    "react": "19.1.1",
    "react-day-picker": "^9.9.0",
    "react-dom": "19.1.1",
    "react-hook-form": "^7.62.0",
    "recharts": "^3.1.2",
    "tailwind-merge": "^3.3.1",
    "web-vitals": "^5.1.0",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.5.2",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19.1.8",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "husky": "^9.1.7",
    "jest": "^30.1.0",
    "jest-environment-jsdom": "^30.1.0",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5"
  }
}
